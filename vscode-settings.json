{

    // "[python]": {
    //     "editor.formatOnSave": true,
    //     "editor.formatOnSaveMode": "file",
    // },

    // "python.analysis.typeCheckingMode": "strict",
    // "python.linting.enabled": true,
    // "python.linting.pylintEnabled": true,
    // "python.formatting.provider": "black",
    // "editor.codeActionsOnSave": {
    //     "source.organizeImports": true
    // },

    // Left explorer panel
    "workbench.colorCustomizations": {
        "statusBar.background": "#292727",
        "statusBar.foreground": "#b3b0b0",
        "gitDecoration.modifiedResourceForeground": "#5379b8",
        "list.errorForeground": "#8f4735"
    },
    // Editor font
    "editor.fontFamily": "Source Code Pro, Menlo, Monaco,'Courier New', monospace",
    "editor.fontWeight": "normal",
    "editor.fontSize": 12,
    // "editor.lineHeight": 20,
    // "editor.lineSpacing": 1.2,
    "editor.fontLigatures": false,
    "editor.minimap.enabled": false,
    // FORMAT ON SAVE
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    // For Prettier
    "[javascript]": {
    },
    "css.lint.duplicateProperties": "warning",
    "css.lint.argumentsInColorFunction": "warning",
    "css.lint.zeroUnits": "warning",
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "git.autofetch": true,
    "window.titleBarStyle": "custom",
    "explorer.confirmDragAndDrop": false,
    "python.envFile": "${workspaceFolder}/.env",
    "editor.tokenColorCustomizations": {
        "strings": "#6FBF8C",
        "textMateRules": [
            {
                "name": "Opening and closing html tags",
                "scope": [
                    "punctuation.definition.tag.begin.html",
                    "punctuation.definition.tag.end.html"
                ],
                "settings": {
                    "foreground": "#CFC3C0"
                }
            },
            {
                "name": "HTML Tag",
                "scope": ["entity.name.tag.html"],
                "settings": {
                    "foreground": "#F07178"
                }
            },
            {
                "name": "Attribute name",
                "scope": [
                    "entity.other.attribute-name.html",
                    "meta.tag.metadata.meta.void.html"
                ],
                "settings": {
                    "foreground": "#FFCB6B"
                }
            },
            {
                "name": "Attribute value",
                "scope": ["string.quoted.double.html"],
                "settings": {
                    "foreground": "#C3E88D"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "variable.parameter.function-call.python",
                    "entity.name.function.decorator.python",
                    "entity.name.function.python",
                    "variable.parameter.function.language.python",
                    "support.function.magic.python",
                    "entity.other.inherited-class.python",
                    "meta.function.decorator.python",
                    "support.type.python",
                    "keyword.operator.assignment.python",
                    "meta.item-access.python",
                    "punctuation.definition.arguments.begin.python",
                    "punctuation.definition.arguments.end.python",
                    "keyword.operator.arithmetic.python",
                    "punctuation.definition.list.begin.python",
                    "punctuation.definition.list.end.python",
                    "punctuation.separator.arguments.python",
                    "punctuation.separator.colon.python",
                    "constant.character.escape.python",
                    "punctuation.section.function.begin.python"
                ],
                "settings": {
                    "foreground": "#e9e9e9"
                }
            },
            {
                "scope": [
                    "entity.name.type.class.python",
                    "keyword.operator.comparison.python"
                ],
                "settings": {
                    "foreground": "#e9e9e9",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "keyword.control.import.python",
                    "storage.type.function.python",
                    "keyword.control.flow.python",
                    "constant.language.python",
                    "keyword.operator.logical.python",
                    "storage.type.function.lambda.python",
                    "storage.type.class.python",
                    "variable.parameter.function.language.special.self.python",
                    "variable.language.special.self.python",
                    "punctuation.separator.period.python",
                    "variable.language.special.cls.python",
                    "storage.type.function.async.python"
                ],
                "settings": {
                    "foreground": "#FF882F",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": ["meta.function-call.generic.python"],
                "settings": {
                    "foreground": "#FF882F"
                }
            },
            {
                "scope": [
                    "string.quoted.docstring.multi.python",
                    "comment.line.number-sign.python"
                ],
                "settings": {
                    "foreground": "#6d6d6d"
                }
            },
            {
                "scope": [
                    "support.function.builtin.python",
                    "support.type.exception.python",
                    "support.type.python"
                ],
                "settings": {
                    "foreground": "#8888C6",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": ["constant.numeric.dec.python"],
                "settings": {
                    "foreground": "#4e8cad"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": ["constant.character.format.placeholder.other.python"],
                "settings": {
                    "foreground": "#a85832",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": ["meta.function-call.arguments.python"],
                "settings": {
                    "foreground": "#D4D4D4"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "punctuation.definition.string.begin.python",
                    "punctuation.definition.string.end.python"
                ],
                "settings": {
                    "foreground": "#6D6D6D"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "support.class.component.js",
                    // "entity.name.tag.js",
                    // "meta.tag.js",
                    // "meta.jsx.children.js",
                    // "meta.tag.js",
                    // "meta.tag.without-attributes.js",
                    // "meta.block.js",
                    "meta.method.declaration.js",
                    "meta.class.js",
                    "source.js"
                ],
                "settings": {
                    "foreground": "#FFC66D"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "meta.tag.js",
                    "meta.tag.without-attributes.js"
                    // "entity.other.attribute-name.js",
                    // "meta.tag.attributes.js"
                ],
                "settings": {
                    "foreground": "#e7e7e7"
                    // "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "punctuation.definition.comment.js",
                    "comment.line.double-slash.js",
                    "comment.block.js"
                ],
                "settings": {
                    "foreground": "#858483"
                }
            }
        ]
    },
    "terminal.integrated.fontFamily": "Source Code Pro",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.defaultProfile.linux": "/bin/bash",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.suggestSelection": "first",
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "files.associations": {
        "*.sql": "python"
    },
    "workbench.sideBar.location": "left",
    "debug.internalConsoleOptions": "openOnSessionStart",
    "workbench.statusBar.visible": true,
    "python.languageServer": "Default",
    "workbench.colorTheme": "Darcula - WebStorm Edition",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "jupyter.askForKernelRestart": false,
    "editor.inlineSuggest.enabled": true,
    "debug.javascript.suggestPrettyPrinting": false,
    "workbench.iconTheme": "vscode-great-icons",
    "files.autoSave": "onWindowChange",
    "prettier.semi": false,
    "prettier.tabWidth": 4,
    "security.workspace.trust.untrustedFiles": "open",
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "javascript": false,
        "scss": false
    },
    "editor.accessibilitySupport": "off",
    "eslint.alwaysShowStatus": true
}
